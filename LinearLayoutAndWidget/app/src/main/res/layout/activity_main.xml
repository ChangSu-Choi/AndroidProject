<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkboxTwice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="트와이스"/>
                <CheckBox
                    android:id="@+id/checkboxBTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A">
                <RadioGroup
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radiobuttonJungkuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정국"/>
                    <RadioButton
                        android:id="@+id/radiobuttonJimin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지민"/>
                    <RadioButton
                        android:id="@+id/radiobuttonTaehyoung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="태형"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2196F3">

            <RadioGroup
                android:id="@+id/group_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radiobuttonFitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fitCenter"/>
                <RadioButton
                    android:id="@+id/radiobuttonMatrix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matrix"/>
                <RadioButton
                    android:id="@+id/radiobuttonFitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fitXY"/>
                <RadioButton
                    android:id="@+id/radiobuttonCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="center"/>
            </RadioGroup>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>