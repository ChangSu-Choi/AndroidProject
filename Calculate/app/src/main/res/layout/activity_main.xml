<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ECF1F5">




    <TextView
        android:id="@+id/TextView"
        android:background="#394045"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:layout_marginTop="10dp"
        android:textColor="#10C888"
        android:textSize="35dp"
        android:gravity="right"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="1"
                android:textSize="30dp"
                android:onClick="button1Click"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="2"
                android:textSize="30dp"
                android:onClick="button2Click"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="3"
                android:textSize="30dp"
                android:onClick="button3Click"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#6E7782"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonPlusClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="4"
                android:textSize="30dp"
                android:onClick="button4Click"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="5"
                android:textSize="30dp"
                android:onClick="button5Click"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="6"
                android:textSize="30dp"
                android:onClick="button6Click"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#6E7782"
                android:text="Ã—"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonMultiplyClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="7"
                android:textSize="30dp"
                android:onClick="button7Click"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="8"
                android:textSize="30dp"
                android:onClick="button8Click"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="9"
                android:textSize="30dp"
                android:onClick="button9Click"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#6E7782"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonDivideClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#ECF1F5"
                android:text="0"
                android:textSize="30dp"
                android:onClick="button0Click"/>

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#32393F"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonEqualClick"/>

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#FA7703"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonClearClick"/>

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_for_circle_button"
                android:backgroundTint="#6E7782"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="buttonSubtractClick"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>